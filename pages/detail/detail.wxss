/* pages/detail/detail.wxss */
.navbg{
  width: 100%;
  height: 50px;
  position: fixed;
  top:0px;
   z-index: 999; 
  background-color: white;
   display: flex;
  flex-direction: row;
  align-items: center;
}
.normal{
  width: 33%;
  color: #cccccc;
  padding: 10px;
  text-align: center;
}
.select{
  width: 33%;
  color: red;
  border-bottom: 2rpx solid red;
  padding: 10px;
  text-align: center;
}
.content{
  width: 100%;
 font-size: 15px;
 margin-top: 50px;
}
.top50{
  margin-top: 50px;
}

.banner{
  width: 100%;
}
.title{
  font-size: 15px;
  width: 100%;
  margin-bottom: 5px;
  border-bottom: 5px solid #f8f8f8;
}
.title_up{
  height: 70%;
  margin: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title_up_title{
  width: 80%;
}
.right_img{
  width:15%;
  text-align: right;
}
.star{
width: 20px;
height: 20px;
}
.price{
  height: 30%;
  color:red;
  margin:10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.price_old{
  padding-left: 5px;
  text-decoration: line-through;
  color:black;
}
.introduce{
  width: 100%;
  padding: 10px;
}
.material{
  width: 100%;
  font-size: 16px;
  padding-left: 10px;
  margin-top: 10px;
  box-sizing: border-box;
}
.subTitle{
  border-left: 3px solid #ff9d38;
  padding-left: 5px;
  margin-bottom: 5px;
}
.item{
   font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10px;
 

}
.left{
  font-size: 14px;
  width: 80%;
}
.right{
  font-size: 13px;
  width: 15%;
  text-align: right;
  color: #cccccc;
}
.hr{
  width: 100%;
   border-bottom: 1px solid #f8f8f8;
   margin-top: 10px;
}
.endLine{
  width: 100%;
  border-bottom: 5px solid #f8f8f8;
  margin-top: 10px;
  margin-bottom: 10px;
}